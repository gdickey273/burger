<header>

<img src= "/assets/img/burger.png">
<h1>Eat-Da-Burger!</h1>

</header>

<div class="container">
  <div class="row">
    <div class="col-lg-5 col-md-5 col-sm-5 col-xs-12" id="not-devoured">
      <h5>Not Yet Devoured!</h5>
      <ul>
        {{#each burgers}}
          {{#unless devoured}}
            <div class="row">
              <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <li class="not-devoured">
                  {{id}}. {{burger_name}}
                  <button class="devour-button" data-id="{{id}}">DEVOUR IT</button>
                </li>
              </div>
            </div>
          {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-lg-2 col-md-2 col-sm-2">
      
    </div>
    
    <div class="col-lg-5 col-md-5 col-sm-5 col-xs-12" id="devoured">
      <h5>Already Devoured!</h5>
      <ul>
        {{#each burgers}}
          {{#if devoured}}
            <div class="row">
              <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <li class="devoured">
                {{id}}. {{burger_name}}
                </li>
              </div>
            </div>
          {{/if}}
        {{/each}}
      </ul>
    </div>
    
  </div>

  <div class="row">
    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12" id="new-burger">
      <h2>Add a Burger</h2>
      <form class="new-burger-form">
        <div class="form-group">
          <label for="burger-name-input">Burger Name:</label>
          <input type="text" id="burger-name-input" name="name" maxlength="50">
        </div>

        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>

</div>